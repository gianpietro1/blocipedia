<div class="row">
  <div class="col-md-12">
    <h2 class="text-center">Edit Wiki</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="pull-right">
      <% if @wiki.private? %>
        <%= link_to "Manage Colaborators", wiki_collaborations_path(@wiki), class: "btn btn-warning pull-right" %>
      <% end %>
    </div>
    <%= form_for @wiki do |f| %>
    <div class='form-group margin-top-20'>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
    </div>
    <div class='form-group'>
      <%= f.label :body %>
      <%= f.text_area :body, rows: 18, class: 'form-control', placeholder: "Enter wiki body" %>
    </div>
    <% if policy(@wiki).destroy? && current_user.premium? %>
      <div class='form-group'>      
        <%= f.label :private, class: 'checkbox margin-left-13' do %>
          <%= f.check_box :private %> Private Wiki
          <% end %>
      </div>
    <% end %>
      <%= link_to "Cancel", wikis_path, class: "btn btn-danger pull-left" %>
      <%= f.submit "Save", class: 'btn btn-success pull-right' %>
  <% end %>
  </div>
  <div class="col-md-2"></div>
</div>
