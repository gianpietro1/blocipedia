<div class="row">
  <div class="col-md-12">
    <h2 class="text-center">Add Collaborators</h2>
  </div>
</div>

<div class="row main-collab">

  <div class="col-md-6">
    <h3>Available Users</h3>
    <%= form_tag wiki_collaborations_path, :method => :post do %>
      <div class='form-group collaborators'>      
        <% @users.each do |user| %>
            <%= check_box_tag("user_ids[]", user.id) %>
              <%= label_tag("user_ids[]", (user.username || user.email)) %></br>
        <% end %>
      </div>
      <%= submit_tag "Add", class: "btn btn-success" %>
   <% end %>
  </div>

  <div class="col-md-6">
    <h3>Current Collaborators</h3>
    <%= form_tag wiki_collaborations_destroy_path, :method => :delete do %>
      <% if @collaborators.any? %>
      <div class='form-group collaborators'>      
        <% @collaborators.each do |user| %>
            <%= check_box_tag("user_ids[]", user.id) %>
              <%= label_tag("user_ids[]", (user.username || user.email)) %></br>
        <% end %>
      </div>
        <%= submit_tag "Remove", class: "btn btn-danger" %>
      <% else %>
        None.
      <% end %>
   <% end %>
  </div>

</div>

<div class="row">
    <div class="margin-top-20">
    <%= link_to "Back to Wiki", @wiki, class: "btn btn-info pull-left" %>
  </div>


