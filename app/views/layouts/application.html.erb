<!DOCTYPE html>
<html>
<head>
  <title>Blocipedia</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <p></p>

    <div class="pull-left">
      <%if current_user %>
         <%= link_to root_path, class: 'btn btn-primary btn-sm' do %>
              <span class="glyphicon glyphicon-home"></span>
            <% end %>
      <% end %>
    </div>

    <div class="pull-right user-info">
      <%if current_user %>
         Hello <%= (current_user.name || current_user.email) %>!
            <%= link_to edit_user_registration_path, class: 'btn btn-primary btn-sm' do %>
              <span class="glyphicon glyphicon-user"></span>
            <% end %>
         <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm', id: 'sign-out' do %>
              <span class="glyphicon glyphicon-log-out"></span>
            <% end %>
      <% end %>
    </div>
    
    <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      &nbsp<%= flash[:notice] %>
    </div>
    <% elsif flash[:error] %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      &nbsp<%= "   " + flash[:error] %>
    </div>
    <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      &nbsp<%= "   " + flash[:alert] %>
    </div>
    <% end %>
    
    <%= yield %>
  </div>
</body>
</html>